<!DOCTYPE html>
<html lang="en">
	<%- include("./partials/head.ejs") %>
	<body>
		<div class="body-container">
			<div class="side-nav"><%- include("./partials/side-nav.ejs") %></div>
			<div class="content">
				<%- include("./partials/body-head.ejs") %>
				<form method="POST" action="/cards">
					<div class="labels">
						<label for="card_type">Type</label>
						<label for="card_name">Name</label>
						<label for="card_description">Description</label>
					</div>
					<div class="form-inputs">
						<select id="card_type" name="card_type">
							<option value="regular">Regular</option>
							<option value="equipment">Equipment</option>
							<option value="character">Character</option>
							<option value="role">Role</option>
						</select>
						<input type="text" id="card_name" name="card_name" required />
						<textarea
							id="card_description"
							name="card_description"
							required
						></textarea>
						<input type="submit" />
					</div>
				</form>
			</div>
		</div>
		<div class="footer"><%- include('./partials/footer.ejs')%></div>
	</body>
</html>
